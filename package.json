{
  "name": "electron-test",
  "version": "1.0.0",
  "main": "main.js",
  "author": "flasco",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=dev electron .",
    "dev:render": "webpack-dev-server --mode development --config ./config/webpack.dev.js",
    "build:render": "npx webpack --mode production --config ./config/webpack.prod.js",
    "build:dist": "electron-builder --mac --x64",
    "pre": "yarn build:render && build:dist"
  },
  "build": {
    "appId": "com.flasco.test.app",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "8",
    "css-loader": "^1.0.0",
    "electron": "^3.0.6",
    "electron-builder": "^20.28.4",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-lean-imports": "^0.3.3",
    "eslint-plugin-react": "^7.11.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "husky": "^1.1.2",
    "is-electron-renderer": "^2.0.1",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.4",
    "prettier-eslint": "^8.8.2",
    "prettier-stylelint": "^0.4.2",
    "react-hot-loader": "^4.3.11",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-processor-html": "^1.0.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-target-electron-renderer": "^0.4.0"
  },
  "dependencies": {
    "react": "^16.6.0",
    "react-dom": "^16.6.0"
  }
}
